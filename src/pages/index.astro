<style>
    /* Estilos Generales */
    .section { padding: var(--space-6) 0; }
    .section-header { text-align: center; margin-bottom: var(--space-4); }
    
    .btn { display: inline-block; padding: 12px 24px; font-weight: 700; text-transform: uppercase; text-decoration: none; border-radius: 4px; font-size: 0.9rem; transition: all 0.2s; }
    .btn-primary { background: white; color: var(--color-accent); } /* Bot칩n blanco texto rojo */
    .btn-primary:hover { background: var(--color-accent); color: white; }
    
    .btn-outline { border: 1px solid white; color: white; }
    .btn-outline:hover { background: white; color: black; }

    /* HERO */
    .hero {
        height: 75vh; position: relative; display: flex; align-items: center;
        background-image: url('https://images.unsplash.com/photo-1596627725963-360db272e512?q=80&w=2000');
        background-size: cover; background-position: center;
    }
    .hero-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.6); }
    .hero-content { position: relative; z-index: 10; text-align: left; }
    .hero h1 { font-size: 3rem; line-height: 1.1; margin-bottom: var(--space-2); color: white; }
    .hero-label { color: var(--color-accent); font-weight: bold; text-transform: uppercase; letter-spacing: 2px; }

    /* SERVICES GRID */
    .services-grid { 
        display: grid; gap: var(--space-4); 
        grid-template-columns: 1fr; /* M칩vil */
    }
    @media(min-width: 768px) { .services-grid { grid-template-columns: repeat(3, 1fr); } }

    .service-card { background: #151515; border: 1px solid #333; overflow: hidden; border-radius: 8px; }
    .service-img { height: 200px; overflow: hidden; }
    .service-img img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.3s; }
    .service-card:hover .service-img img { transform: scale(1.05); }
    .service-text { padding: var(--space-3); }
    .service-text h3 { color: white; margin-bottom: var(--space-1); }
    .service-text p { color: #aaa; font-size: 0.9rem; }

    /* IDENTITY GRID */
    .identity-wrapper { display: grid; gap: var(--space-3); grid-template-columns: 1fr; }
    @media(min-width: 768px) { .identity-wrapper { grid-template-columns: 1fr 1fr; } }
    .full { grid-column: 1 / -1; }
    .text-block { background: #1a1a1a; padding: var(--space-3); border-left: 2px solid var(--color-accent); }
    .text-block h4 { color: white; margin-bottom: var(--space-1); }
    .text-block p { color: #ccc; }

    /* MAPA */
    .map-container { 
        display: grid; gap: var(--space-4); 
        background: #151515; padding: var(--space-4); border-radius: 8px; 
        border: 1px solid #333;
    }
    @media(min-width: 768px) { .map-container { grid-template-columns: 1fr 2fr; align-items: center; } }
    
    .map-visual { 
        position: relative; height: 300px; border-radius: 4px; overflow: hidden; display: block; background: #222;
    }
    .map-placeholder { width: 100%; height: 100%; object-fit: cover; opacity: 0.6; }
    .map-visual:hover .map-placeholder { opacity: 0.8; }
    .pin { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 3rem; z-index: 10; }
</style>